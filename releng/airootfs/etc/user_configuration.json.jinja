{
  "additional-repositories": [],
  "archinstall-language": "English",
  {#- TODO fix #}
  "audio_config": {
    "audio": "pipewire"
  },
  "bootloader": "grub",
  "custom_commands": [
    {%- for c in custom_commands %}
    "{{ c }}"{{ "," if not loop.last }}
    {%- endfor %}
  ],
  "debug": false,
  {#- disk_config -#}
  {#- disk_encryption #}
  "hostname": "{{ hostname }}",
  "kernels": [
    "linux"
  ],
  "locale_config": {
    "kb_layout": "es",
    "sys_enc": "UTF-8",
    "sys_lang": "en_US"
  },
  "network_config": {},
  "no_pkg_lookups": false,
  "ntp": true,
  "offline": false,
  "packages": [
    {%- for p in (packages.iso + packages.install) %}
    "{{ p }}"{{ "," if not loop.last }}
    {%- endfor %}
  ],
  "parallel downloads": 0,
  "profile_config": {
    "gfx_driver": "{{ gpu_driver }}",
    "greeter": "sddm",
    "profile": {
      "custom_settings": {
        "Hyprland": {
            "seat_access": "polkit"
        }
      },
      "details": [
        "Hyprland"
      ],
      "main": "Desktop"
    }
  },
  "save_config": null,
  "script": "guided",
  "silent": false,
  "swap": true,
  "timezone": "Europe/Madrid",
  "version": null
}
